<!-- after submitting answer -> redirect to this page -->
<h1>Result</h1>

<!-- is word from given letters ? -->
<% if @included %>
  <% if @english_word %>
    <p><strong>Congratulations!</strong> <%= @word %> is English word!</p>
  <% else %>
    <p>Sorry, <strong><%= @word %></strong> is not English word :}</p>
  <% end %>
  <!-- is included is not Eng word -->
<% else %>
  <p>Sorry, but <strong><%= @word %> cannot create valid English word from these letters: <%= @letters.join(", ") %></strong></p>
<% end %>

<%= link_to "Play again", new_path %>

